<div class="w-75 ml-5 container-sm">
    <table class="mt-3 table table-bordered">
    <thead>
        <tr class="p-5">
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Age</th>
            <th>Highest Qualification</th>
            <th>Address</th>
            <th>Mobile Number</th>
            <th>Date of Joining</th>
            <th>Designation</th>
            <th>Team</th>
            <th>Shift</th>
            <th>Office Location</th>
            <th>Reporting To</th>
        </tr>
    </thead>
    <tbody>
        {{#each this.employeesData.datas as |item|}}
          <tr>
            {{log item}}
            <td>{{item.eId}}</td>
            <td>{{item.firstname}}</td>
            <td>{{item.lastname}}</td>
            <td>{{item.email}}</td>
            <td>{{item.dob}}</td>
            <td>{{item.age}}</td>
            <td>{{item.qualification}}</td>
            <td>{{item.addr}}</td>
            <td>{{item.mobileNumber}}</td>
            <td>{{item.doj}}</td>
            <td>{{item.designation}}</td>
            <td>{{item.team}}</td>
            <td>{{item.shifttime}}</td>
            <td>{{item.location}}</td>
            <td>{{item.reporting}}</td>
            <td><button type="button" {{action (fn this.editEmployee item)}} class="text-white bg-primary border-0 editButton">Edit Employee</button></td>
            <td><button type="button" {{action  (fn this.deleteButton item)}} class="text-white bg-danger border-0 deleteButton">Delete Employee</button> </td>
          </tr>
        {{/each}} 
    </tbody>
</table>
<button type="button" class="bg-primary p-2 text-white border-0 addButton" {{on "click" this.addEmployee}}>Add Employee</button>
</div>
   
